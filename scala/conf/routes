
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Shop

GET     /products                   controllers.ProductsController.getAll
+nocsrf
POST    /products                   controllers.ProductsController.create
GET     /products/:id               controllers.ProductsController.getById(id: Int)
PUT     /products/:id               controllers.ProductsController.update(id: Int)
+nocsrf
DELETE  /products/:id               controllers.ProductsController.delete(id: Int)

GET     /orders                     controllers.OrdersController.getAll
+nocsrf
POST    /orders                     controllers.OrdersController.create
GET     /orders/:id                 controllers.OrdersController.getById(id: Int)
PUT     /orders/:id                 controllers.OrdersController.update(id: Int)
+nocsrf
DELETE  /orders/:id                  controllers.OrdersController.delete(id: Int)

GET     /orderProducts              controllers.OrderProductController.getAll
+nocsrf
POST    /orderProducts              controllers.OrderProductController.create
GET     /orderProducts/:id          controllers.OrderProductController.getById(id: Int)
PUT     /orderProducts/:id          controllers.OrderProductController.update(id: Int)
+nocsrf
DELETE  /orderProducts/:id          controllers.OrderProductController.delete(id: Int)

GET     /categories                 controllers.CategoriesController.getAll
+nocsrf
POST    /categories                 controllers.CategoriesController.create
GET     /categories/:id             controllers.CategoriesController.getById(id: Int)
PUT     /categories/:id             controllers.CategoriesController.update(id: Int)
+nocsrf
DELETE  /categories/:id             controllers.CategoriesController.delete(id: Int)

GET     /inventory                  controllers.InventoryController.getAll
+nocsrf
POST    /inventory                  controllers.InventoryController.create
GET     /inventory/:id              controllers.InventoryController.getById(id: Int)
PUT     /inventory/:id              controllers.InventoryController.update(id: Int)
+nocsrf
DELETE  /inventory/:id              controllers.InventoryController.delete(id: Int)

GET     /users                      controllers.UsersController.getAll
+nocsrf
POST    /users                      controllers.UsersController.create
GET     /users/:id                  controllers.UsersController.getById(id: Int)
PUT     /users/:id                  controllers.UsersController.update(id: Int)
+nocsrf
DELETE  /users/:id                  controllers.UsersController.delete(id: Int)

GET     /auth                       controllers.AuthController.index
